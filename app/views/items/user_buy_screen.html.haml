= render 'layouts/header_form'
= render 'layouts/bread_crumbs'
.wrapper
  .item-box-container
    %h1.item-name
      = @item.name
    .item-main-content
      .item-photo
        = image_tag @item.image, size:'300x300'
      %table.item-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              = @item.user.nickname
          %tr
            %th カテゴリー
            %td
              = @category.name
          %tr
            %th ブランド
            %td ブランド名
          %tr
            %th 商品サイズ
            %td S, M or L
          %tr
            %th 商品の状態
            %td 商品の状態
          %tr
            %th 配送料の負担
            %td 込み/抜き
          %tr
            %th 配送の方法
            %td 配送方法
          %tr
            %th 配送元地域
            %td 配送元地域
          %tr
            %th 発送日の目安
            %td 1-2/2-3/4-7
  .item-price-container
    %span.item-price
      = number_to_currency(@item[:price], precision: 0, unit: "￥")
    %span.item-tax (税込)
    %span.item-shipping-fee 送料込み
  .item-buy-container
    - if @item.buyer_id == nil
      -if user_signed_in? && @item.user_id != current_user.id
        %button.item-buy-btn-red
          = form_tag(action: :pay_jp, method: :post) do
            %script.payjp-button{"data-key": "#{ENV["PAYJP_PUBLIC_KEY"]}", src: "https://checkout.pay.jp", type: "text/javascript", "data-text": "購入する"}
    - else
      %button.item-buy-btn-gray 売り切れました
  .item-description-container
    %p.item-description-inner
      = @item.description
  .items-in-user-profile-container
    %h2
      = link_to '<ここに出品者の名前>さんのその他の出品'
    renderで貼り付け
  .items-in-category-container
    %h2
      =link_to '<ここに同じカテゴリー名> その他の商品'
    renderで貼り付け
= render 'layouts/footer'
