= render 'layouts/header_form'
.wrapper
  .item-box-container
    %h1.item-name
      = @item.name
    .item-main-content
      .item-photo
        = image_tag @item.image, size:'300x300'
      %table.item-detail-table
        %tbody
          %tr
            %th 出品者
            %td
              = @item.user.nickname
          %tr
            %th カテゴリー
            %td
              = @category.name
          %tr
            %th ブランド
            %td ブランド名
          %tr
            %th 商品サイズ
            %td S, M or L
          %tr
            %th 商品の状態
            %td 商品の状態
          %tr
            %th 配送料の負担
            %td 込み/抜き
          %tr
            %th 配送の方法
            %td 配送方法
          %tr
            %th 配送元地域
            %td 配送元地域
          %tr
            %th 発送日の目安
            %td 1-2/2-3/4-7
  .item-price-container
    %span.item-price
      = number_to_currency(@item[:price], precision: 0, unit: "￥")
    %span.item-tax (税込)
    %span.item-shipping-fee 送料込み
  .item-description-container
    %p.item-description-inner
      = simple_format @item.description
  .items-in-user-profile-container
    - if user_signed_in? && current_user.id == @item.user_id
      .item-buy-container
        %button.item-buy-btn-red{onclick: "location.href='/items/#{@item.id}/edit'",}
          商品の編集
      .item-buy-container
        or
      .item-buy-container
        %button.item-buy-btn-gray
          出品を停止する
      .item-buy-container
        %button.item-buy-btn-gray
          = link_to( "この商品を削除する", "/items/#{@item.id}", method: :delete, data: {confirm: "本当に削除しますか？"})
= render 'layouts/footer'
